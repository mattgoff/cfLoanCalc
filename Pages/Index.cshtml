@page
@model IndexModel
@{
    ViewData["Title"] = "LoanCalculator";
}

<div class="text-center">
    <h1 class="display-4 textOrange" style="font-family: 'Pacifico', cursive; font-size: 150px;">CF Loan Calc</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-3">
            <img src="/images/bobbyshead.png" style="height: 300px; width: 200px;" alt="">
        </div>

        <div class="col-sm-4">
            <form method="POST">
                <label class="labelMargins">Loan Amount: </label>
                <br />
                <input asp-for="LoanAmount" value=@Model.LoanAmount>
                <br />
                <label class="labelMargins">Term Length(months): </label>
                <br />
                <input asp-for="LoanTermLength" value=@Model.LoanTermLength>
                <br />
                <label class="labelMargins">Interest Rate: </label>
                <br />
                <input asp-for="LoanInterestRate" value=@Model.LoanInterestRate>
                <input type="submit">
                <br />
                <br />
            </form>
        </div>

        <div class="col-sm-3">
            <img src="/images/kevinshead.png" style="height: 300px; width: 200px;" alt="">
        </div>
        <div class="col-sm-1"></div>
    </div>
</div>

<br /> <br />

  <table class="table table-striped table-hover table-borderless table-sm">
    <thead class="thead-light" ></thead>
    <tr>
      <th class="text-center textOrange">Payment No.</td>
      <th class="text-center textOrange">Payment</td>
      <th class="text-center textOrange">Principal</td>
      <th class="text-center textOrange">Interest</td>
      <th class="text-center textOrange">Total Interest</td>
      <th class="text-center textOrange">Balance</td>
    </tr>
    </thead>
    <tbody>
        @if (Model.LoanSchedule != null)
        {
            @foreach (var item in Model.LoanSchedule)
            {
                <tr>
                    <td class="text-center textOrange">@item.paymentNumber</td>
                    <td class="text-center textOrange">@item.paymentAMT.ToString("N2")</td>
                    <td class="text-center textOrange">@item.principalAMT.ToString("N2")</td>
                    <td class="text-center textOrange">@item.interestAMT.ToString("N2")</td>
                    <td class="text-center textOrange">@item.interestTotal.ToString("N2")</td>
                    <td class="text-center textOrange">@item.loanBalance.ToString("N2")</td>
                </tr>
            }
        }